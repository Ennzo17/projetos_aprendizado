<StatusIndicator>:
    Label:
        text: "Ativo" if root.is_active else "Inativo"
        color: (0,1,0,1) if root.is_active else (1,0,0,1)

<MainControlWidget>:
    orientation: 'vertical'
    status_obj: status
    StatusIndicator:
        id: status
    Button:
        text: "Alternar Status"
        on_press: root.toggle_status()
