<MyCustomWidget>:
    orientation: 'vertical'
    spacing: 10
    padding: 20

    on_message_changed:
        log_label.text = "Mensagem alterada: " + args[1]

    Label:
        id: log_label
        text: "Log:"

    TextInput:
        id: input
        multiline: False

    Button:
        text: "Enviar"
        on_press: root.message = input.text

